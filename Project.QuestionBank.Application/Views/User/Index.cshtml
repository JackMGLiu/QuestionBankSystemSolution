@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <title>用户管理</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <link href="~/Content/layui/css/layui.css" rel="stylesheet" media="all" />
    <link href="~/Content/styles/public.css" rel="stylesheet" media="all" />
</head>
<body class="childrenBody">
    <!-- 页面加载loading -->
    <div class="page-loading">
        <div class="rubik-loader"></div>
    </div>
    <!-- 页面加载loading -->
    <form class="layui-form">
        <blockquote class="layui-elem-quote quoteBox">
            <form class="layui-form">
                <div class="layui-inline">
                    <div class="layui-input-inline">
                        <input type="text" class="layui-input searchVal" style="width: 235px;" placeholder="请输入用户名或姓名查询" />
                    </div>
                    <a class="layui-btn layui-btn-sm search_btn" data-type="reload">搜索</a>
                </div>
                <div class="layui-inline">
                    <a class="layui-btn layui-btn-sm layui-btn-normal addNews_btn">添加用户</a>
                </div>
                <div class="layui-inline">
                    <a class="layui-btn layui-btn-sm layui-btn-danger layui-btn-normal btn_delAll">批量删除</a>
                </div>
            </form>
        </blockquote>
        <table class="layui-table" id="userlist" lay-filter="userlist"></table>
        <script id="createTime" type="text/html">
            {{#
        var date = new Date();
        date.setTime(d.CreateTime);
        return date.Format("yyyy-MM-dd hh:mm:ss");

            }}
        </script>
        <script id="role" type="text/html">
            {{#
        if(d.RoleName==null || d.RoleName==''){
        return '<span style="color: blue;">暂无</span>';
        }else{
        return d.RoleName;
        }
            }}
        </script>
        <!--操作-->
        <script type="text/html" id="userops">
            <a class="layui-btn layui-btn-xs" lay-event="edit">编辑</a>
            @*<a class="layui-btn layui-btn-xs layui-btn-warm" lay-event="userenable">已启用</a>*@
            <a class="layui-btn layui-btn-xs layui-btn-danger" lay-event="del">删除</a>
        </script>
    </form>
    <script src="~/Content/layui/layui.js"></script>
    <script src="~/Content/jquery/jquery.js"></script>
    <script src="~/Content/scripts/common.js"></script>
    <script src="~/Content/scripts/user/index.js"></script>
</body>
</html>
