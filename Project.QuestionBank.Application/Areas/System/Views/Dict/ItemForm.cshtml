
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>字典明细表单</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <link href="~/Content/layui/css/layui.css" rel="stylesheet" media="all" />
    <link href="~/Content/styles/public.css" rel="stylesheet" media="all" />
</head>
<body class="childrenBody">
    <!-- 页面加载loading -->
    <div class="page-loading">
        <div class="rubik-loader"></div>
    </div>
    <form class="layui-form" style="width:80%;">
        <input type="hidden" name="DictItemId" class="DictItemId" value="" />
        <div class="layui-row">
            <div class="magb15 layui-col-md4 layui-col-xs12">
                <label class="layui-form-label">项目名称</label>
                <div class="layui-input-block">
                    <input type="text" class="layui-input ItemName" name="ItemName" lay-verify="required" placeholder="请输入项目名称">
                </div>
            </div>
            <div class="magb15 layui-col-md4 layui-col-xs12">
                <label class="layui-form-label">项目代码</label>
                <div class="layui-input-block">
                    <input type="text" class="layui-input ItemCode" name="ItemCode" lay-verify="required" placeholder="请输入项目代码">
                </div>
            </div>
            <div class="magb15 layui-col-md4 layui-col-xs12">
                <label class="layui-form-label">项目值</label>
                <div class="layui-input-block">
                    <input type="text" class="layui-input ItemValue" name="ItemValue" lay-verify="required" placeholder="请输入项目值">
                </div>
            </div>
        </div>
        <div class="layui-row">
            <div class="magb15 layui-col-md4 layui-col-xs12">
                <label class="layui-form-label">排序序号</label>
                <div class="layui-input-block">
                    <input type="text" class="layui-input SortCode" name="SortCode" lay-verify="number" value="0">
                </div>
            </div>
            <div class="magb15 layui-col-md4 layui-col-xs12">
            </div>
            <div class="magb15 layui-col-md4 layui-col-xs12">
            </div>
        </div>
        <div class="layui-row">
            <div class="magb15 layui-col-md4 layui-col-xs12">
                <label class="layui-form-label">启用状态</label>
                <div class="layui-input-block">
                    <input type="checkbox" name="EnabledMark" class="EnabledMark" lay-skin="switch" lay-filter="switchEnabled" lay-text="启用|禁用" value="1" checked>
                </div>
            </div>
            <div class="magb15 layui-col-md4 layui-col-xs12">
            </div>
            <div class="magb15 layui-col-md4 layui-col-xs12">
            </div>
        </div>
        <div class="layui-form-item layui-row layui-col-xs6">
            <label class="layui-form-label">备注信息</label>
            <div class="layui-input-block">
                <textarea name="Remark" placeholder="备注信息" class="layui-textarea Remark"></textarea>
            </div>
        </div>
        <div class="layui-form-item layui-row layui-col-xs6">
            <div class="layui-input-block">
                <button class="layui-btn layui-btn-sm" lay-submit="" lay-filter="btnsave">保存</button>
                <button type="reset" class="layui-btn layui-btn-sm layui-btn-primary">取消</button>
            </div>
        </div>
    </form>
    <script src="~/Content/layui/layui.js"></script>
    <script src="~/Content/jquery/jquery.js"></script>
    <script src="~/Content/scripts/common.js"></script>
    <script src="~/Content/scripts/dict/itemform.js"></script>
</body>
</html>
