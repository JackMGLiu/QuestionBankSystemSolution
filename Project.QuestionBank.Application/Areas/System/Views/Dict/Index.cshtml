
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>数据字典管理</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <link href="~/Content/layui/css/layui.css" rel="stylesheet" media="all" />
    <link href="~/Content/styles/public.css" rel="stylesheet" media="all" />
    <link href="~/Content/ztree/css/zTreeStyle/zTreeStyle.css" rel="stylesheet" />
    <link href="~/Content/scrollbar/jquery.mCustomScrollbar.css" rel="stylesheet" />
    <style>
        html {
            background-color: #f2f2f2;
        }

        .layui-fluid {
            padding: 15px;
        }

        .layui-card .layui-card-header .layui-badge.pull-right {
            top: 50%;
            margin-top: -9px;
        }
    </style>

</head>
<body class="childrenBody">
    <!-- 页面加载loading -->
    <div class="page-loading">
        <div class="rubik-loader"></div>
    </div>
    <div class="layui-fluid">
        <div class="layui-row layui-col-space15">
            <div class="layui-col-xs2 layui-col-md3">
                <div class="layui-card cardcontent" style="height:500px;overflow: hidden;">
                    <div class="layui-card-header">字典类型</div>
                    <div class="layui-card-body" style="margin:3px;">
                        <ul id="dictTypeTree" class="ztree"></ul>
                    </div>
                </div>
            </div>
            <div class="layui-col-xs10 layui-col-md9">
                <div class="layui-card" style="height:500px;overflow: hidden;">
                    <div class="layui-card-header">字典明细 - <span id="dtypename">【无】</span></div>
                    <div class="layui-card-body">
                        <blockquote class="layui-elem-quote quoteBox">
                            <div class="layui-inline">
                                <a class="layui-btn layui-btn-sm layui-btn-normal addNews_btn">新增项目</a>
                            </div>
                            <div style="float: right;">
                                <div class="layui-inline">
                                    <a class="layui-btn layui-btn-sm layui-btn-warm addNews_btn">新增类型</a>
                                </div>
                                <div class="layui-inline">
                                    <a class="layui-btn layui-btn-sm layui-btn-danger btn_delAll">字典类型管理</a>
                                </div>
                            </div>

                        </blockquote>
                        <input type="hidden" id="dtypeid" value="" />
                        <table class="layui-table" id="dictlist" lay-filter="dictlist"></table>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <!--操作-->
    <script type="text/html" id="userops">
        <a class="layui-btn layui-btn-xs" lay-event="edit">编辑</a>
        <a class="layui-btn layui-btn-xs layui-btn-danger" lay-event="del">删除</a>
    </script>
    <script src="~/Content/layui/layui.js"></script>
    <script src="~/Content/jquery/jquery.js"></script>
    <script src="~/Content/ztree/js/jquery.ztree.all.min.js"></script>
    <script src="~/Content/scripts/dict/index.js"></script>
    <script src="~/Content/scrollbar/jquery.mCustomScrollbar.concat.min.js"></script>
    <script src="~/Content/scripts/common.js"></script>
</body>
</html>
